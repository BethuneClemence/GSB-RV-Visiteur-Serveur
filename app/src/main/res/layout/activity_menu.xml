<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MENU D'ACTIVITE"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="90dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consulter et saisir de nouveaux rapports"
        android:textColor="@color/yellow"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/custom_layout"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/id_userCo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:drawableLeft="@drawable/account"
            android:gravity="center"
            android:padding="100dp"
            android:text="Ewen prigent"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="190dp"
            android:background="@drawable/custom_button"
            android:text="Consulter un rapport"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:onClick="consulterRapport"
            />

        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="260dp"
            android:background="@drawable/custom_button"
            android:text="Saisir un rapport"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:onClick="saisirRapport"/>

        <Button
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="360dp"
            android:background="@drawable/custom_button_profil"
            android:text="Profil"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>


