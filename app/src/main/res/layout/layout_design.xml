<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="15dp"
    app:cardPreventCornerOverlap="true"
    android:paddingBottom="10dp"
    android:layout_marginBottom="20dp"
    android:elevation="30dp"
    app:cardBackgroundColor="@color/green_bg"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/praticien_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:text="Jacky BETHUNE"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/libelle_motif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="15dp"
            android:textAlignment="center"
            android:textSize="9.5dp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"
            android:text="Test"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/date_creation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="238dp"
            android:padding="15dp"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"
            android:text="Crée le 14/03/2021"
            android:textColor="@color/yellow_hard"
            />

        <TextView
            android:id="@+id/rap_bilan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="45dp"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"
            android:text="Bilan"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/date_redaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:padding="15dp"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-medium"
            android:text="Crée le 14/03/2021"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/rap_lu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="323dp"
            android:layout_marginTop="65dp"
            android:padding="15dp"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="@color/green_text"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>